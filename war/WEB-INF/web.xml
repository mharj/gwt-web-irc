<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <!-- Servlets -->
  <servlet>
    <servlet-name>ircServlet</servlet-name>
    <servlet-class>lan.sahara.webirc.server.IrcServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ircServlet</servlet-name>
    <url-pattern>/webirc/irc</url-pattern>
  </servlet-mapping>  
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>WebIrc.html</welcome-file>
  </welcome-file-list>

</web-app>
